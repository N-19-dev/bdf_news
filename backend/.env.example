# Required: Groq API Key for LLM processing
# Get it from: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# Required for Community Voting: Firebase Admin SDK Service Account
# Download JSON from Firebase Console → Project Settings → Service Accounts
# Either provide the path to the JSON file OR set this as the JSON string
FIREBASE_SERVICE_ACCOUNT_KEY=/path/to/serviceAccountKey.json

# Optional: SendGrid API Key for daily email digest (Phase 2)
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Optional: Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Week offset for testing (0 = current week, -1 = last week)
WEEK_OFFSET=0
